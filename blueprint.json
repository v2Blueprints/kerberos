{
	"title": "kerberos",
	"description": "kerberos ",
	"configuration": {
		"ServerAdmin": "hostmaster@^^domain_name^^",
		"domain": "^^internal_domain^^",
		"kdc_domain": "^^internal_domain_in_capitals_or_hand_entered^^"
	},
"os_packages": [
	{
		"type": "debian",
		"name": "kerberos"
	}
],
"volumes": [
	{
		"type": "dir",
		"destination": "/etc/krb5kdc/",
		"source": "/var/lib/containers/^^identifier^^/etc"
	},	
	{
		"type": "dir",
		"destination": "/var/krb5/",
		"source": "/var/lib/containers/^^identifier^^/var"
	}
],
	"bindings": [
		{
			"type": "connect",
			"repository": "https://github.com/v2Blueprints/dns",
			"branch": "hashidocker",
			"variables": {
				"hostname": "kdc",
				"domain": "^^internal_domain^^"
			}
		},		{
			"type": "connect",
			"repository": "https://github.com/v2Blueprints/dns",
			"branch": "hashidocker",
			"variables": {
				"hostname": "_kerberos-adm._tcp",
				"domain": "^^internal_domain^^"
			}
		},		{
			"type": "connect",
			"repository": "https://github.com/v2Blueprints/dns",
			"branch": "hashidocker",
			"variables": {
				"hostname": "_kerberos-master._udp",
				"domain": "^^internal_domain^^"
			}
		},
				{
			"type": "connect",
			"repository": "https://github.com/v2Blueprints/dns",
			"branch": "hashidocker",
			"variables": {
				"hostname": "_kerberos._tcp",
				"domain": "^^internal_domain^^"
			}
		},
				{
			"type": "connect",
			"repository": "https://github.com/v2Blueprints/dns",
			"branch": "hashidocker",
			"variables": {
				"hostname": "_kerberos._udp",
				"domain": "^^internal_domain^^"
			}
		}
	],"binding_anchor": {
		"variables": {
			"databasename": "^^identifier^^",
			"username": "^^identifier^^_user",
			"password": "^^random(10)^^",
			"collation": "utf8_general_ci",
			"charset": "utf8",
			"super_user": false,
			"grant:": false
		},
		"strategies": {
			"addition": {
				"type": "container_script",
				"path": "/usr/local/bin/add_credentials.sh",
				"result": "file",
				"required": [
					"prefix",
					"fqdn"
				]
			},
			"accepted": [
					"prefix",
					"fqdn"
			]
		},
		"deletion": {
			"type": "container_script",
			"path": "/usr/local/bin/remove_credentials.sh",
				"required": [
					"prefix",
					"fqdn"
				],
			"accepted": [
					"prefix",
					"fqdn"
			]
			
		}
	},
"images": [
	{
		"type": "lxd",
		"image": "enginesd_debian_base"
	}
],
"containers": [
	{
		"type": "lxd"
	}
]
}
